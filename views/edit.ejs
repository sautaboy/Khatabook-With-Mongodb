<%-include("nav.ejs")%>

    <div class="container mt-4">
        <h2>You are Editing: <%=title%>
        </h2>
        <form id="addEntryForm" action="/update" method="POST">
            <div class="form-group">
                <input type="text" name="title" placeholder="<%=title%>"
                    style="margin: 10px 0;width: 100%; padding: 5px;" required>
                <textarea class="form-control" name="details" id="entryText" name="entryText" rows="20" required>
                    <%=details%>
                </textarea>
            </div>
            <button type="submit" class="btn btn-success mt-2">Submit</button>
        </form>
    </div>